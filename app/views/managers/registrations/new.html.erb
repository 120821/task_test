<div class="login">
  <div class="login_left">
      <h1 style="margin-top: 140px; margin-left: 219px;">保供平台</h1>
      <br/>
      <span style="font-size: 30px; margin-left: 149px; font-weight: 400; color: #616161; line-height: 50px; letter-spacing: 2px;">
        应急物资储备保障平台
      </span>
      <%= image_tag 'login.png', style: 'width: 548px; height: 548px; margin-top: 57px' %>
  </div>
  <div class="login_right">
    <h2 style="margin-top: 143px; margin-left: 172px;">
      注册
      <span style="font-size: 24px; font-weight: 400; color: #525252; line-height: 30px; letter-spacing: 1px;">保供平台
      </span>
    </h2>
    <div class="login_form">
      <p class="links">
        <%#= link_to "管理员", "#", class: "active-link" %>
        <%= link_to "保供企业", "#" %>
        <%#= link_to "地州商务局", "#" %>
      <p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "form-horizontal", id: "new_role_form"}) do |f| %>
      <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.text_field :email, autofocus: true, class: "form-control", style: "background: #EAEAEA; border-radius: 6px 6px 6px 6px; opacity: 0.4; margin-top: 30px; height: 56px;", placeholder: "请输入邮箱"%>
        </div>
        <div class="form-group" style="margin-top: 20px;">
          <%= f.password_field :password, autocomplete: "off", id: 'password', class: "form-control", style: "height: 56px; background: #EAEAEA; border-radius: 6px 6px 6px 6px; opacity: 0.4; margin-top: 30px;", placeholder: "请输入密码" %>
        </div>
        <div class="form-group" style="margin-top: 20px;">
          <%= f.password_field :password_confirmation, autocomplete: "off", id: 'confirm', class: "form-control", style: "height: 56px; background: #EAEAEA; border-radius: 6px 6px 6px 6px; opacity: 0.4; margin-top: 30px;", placeholder: "请确认密码" %>
        </div>
        <% if flash[:warning] %>
          <p class="text-warning text-center"><small><%= flash[:warning] %></small></p>
        <% end %>
        <%= f.hidden_field :category, value: '企业' %>
        <div style="margin-top: 50px;">
          <%= f.submit '确定', class: 'login_btn', style: 'letter-spacing: 15px;' %>
          <%#= link_to t("public.cancel"), :back , class: 'btn btn-default' %>
          <%= link_to "取消", :back, class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  // 获取所有链接
  const links = document.querySelectorAll(".links a");

  // 遍历每个链接
  links.forEach((link, index) => {
    // 给第一个链接添加激活状态
    if (index === 0) {
      link.classList.add("active-link");
    }

    // 给每个链接添加点击事件监听器
    link.addEventListener("click", (event) => {
      event.preventDefault(); // 防止链接跳转

      // 移除所有链接的激活状态
      links.forEach((link) => {
        link.classList.remove("active-link");
      });

      // 给当前点击的链接添加激活状态
      link.classList.add("active-link");
    });
  });
</script>

