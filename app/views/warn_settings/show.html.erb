
<%#= render @warn_setting %>
<div class="list">
  <span class="show_title">
    <span style="margin-right: 5px;">
      <%= image_tag "enterprise.png" %>
    </span>
    <span> 基本信息</span>
  </span>
  <div style="display: flex;">
    <table class='' style="margin-top: 35px;">

      <tr>
        <td>
          <span class="show_table_name">商品名称:&nbsp;</span>
          <span class="show_table_content"><%= @warn_setting.goods_name %></span>
        </td>
      </tr>

      <tr>
        <td>
          <span class="show_table_name">商品分类:&nbsp;</span>
          <span class="show_table_content"><%= @warn_setting.goods_category %></span>
        </td>
      </tr>


      <tr>
        <td>
          <span class="show_table_name">最高预警量:&nbsp;</span>
          <span class="show_table_content"><%= @warn_setting.simple_data %></span>
        </td>
      </tr>
      <tr>
        <td>
          <span class="show_table_name">最低预警量:&nbsp;</span>
          <span class="show_table_content"><%= @warn_setting.danger_data %></span>
        </td>
      </tr>
      <tr>
        <td>
          <span class="show_table_name">备注:&nbsp;</span>
          <span class="show_table_content"><%= @warn_setting.remak %></span>
        </td>
      </tr>
    </table>
  </div>
  <div style="margin-top: 50px;">
    <%= link_to "编辑", edit_warn_setting_path(@warn_setting), class: 'btn btn-light btn-sm', style: 'width: 100px; border: 1px solid #0d6efd;' %>
    <%= link_to "返回", warn_settings_path, class: 'btn btn-primary btn-sm', style: 'width: 100px; margin-left: 20px;' %>
    <%#= button_to "删除", @warn_setting, method: :delete, class: 'btn btn-sm btn-danger' %>
  </div>
  <div style="height: 89px;"></div>
</div>
