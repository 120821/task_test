<div style="display: flex; width: 1200px;">
  <div class="daily_table">
    <p style="margin: 20px;">
      <svg xmlns="http://www.w3.org/2000/svg" color="#0066ff" width="16" height="16" fill="currentColor" class="bi bi-caret-right-fill" viewBox="0 0 16 16">
        <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
      </svg>
      <span style="margin-left: 10px;font-weight: 600; font-size: 18px;">物资储备列表<span>
    </p>
    <%= form_tag '', method: :get do %>
      <p class="form_row">
        <span class="query_submissions" >地州: <%= select_tag :region, options_for_select(@regions, params[:region]), class: 'select_region', style: 'width: 200px;' %></span>
        <span class="query_submissions" >&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;物资: <%= select_tag :goods_name, options_for_select(CATEGORY_ARRAY, params[:goods_name]), class: 'select_region', style: 'width: 200px;' %></span>
        <span class="query_submissions" style="margin-left: 6px;">&nbsp;&nbsp;&nbsp;&nbsp;企业名称:&nbsp;&nbsp;&nbsp;&nbsp; <%= text_field_tag :enterprise_name, params[:enterprise_name], placeholder: '请输入企业名称', class: 'select_region', style: 'width: 200px;' %></span>
        <!--
        <span class="query_submissions" style="margin-left: 6px;">&nbsp;&nbsp;&nbsp;&nbsp;日期:&nbsp;&nbsp;&nbsp;&nbsp; <%= text_field_tag :daily_goods_date, params[:daily_goods_date], id: 'datepicker', placeholder: '例如 20230402', class: 'select_region', style: 'width: 200px;' %></span>
        -->
        &nbsp;&nbsp;&nbsp;&nbsp;<%= submit_tag "查询", class: "form_submit", class: 'btn btn-primary', style: 'width: 65px; font-size: 14px; height: 32px; line-height: 14px; background: #006DF1; opacity: 1' %>
      </p>
    <% end %>
    <p class="links_status" style="margin: 30px 0;">
      &nbsp;&nbsp;&nbsp;&nbsp;<%= link_to '物资日统计表', daily_goods_statistics_path %>
      <%= link_to '物资储备名录', material_reserves_path, style: 'margin-left: 26px;', class: 'active-link'  %>
      <%= link_to '物资数据报送', goods_data_submissions_path, style: 'margin-left: 26px;' %>
    </p>

    <table class='table' style='border-left: 1px solid #dcdcdc; border: 1px solid #dcdcdc; border-right: 1px solid #dcdcdc; background: snow;'>
      <tr class="table_title" class="">
        <td class="table_td_title"  style="margin-top: 16px; display: ;color: snow;">所属地州</td>
        <td class="table_td_title"  style="margin-top: 16px; display: ;color: snow;">企业名称</td>
        <!--
        <td class="table_td_title"  style="color: snow;">企业分类</td>
        <td class="table_td_title"  style="color: snow;">最大储备容量</td>
        <td class="table_td_title"  style="color: snow;">仓库经纬度</td>
        -->
        <td class="table_td_title"  style="color: snow;">储备库点</td>
        <td class="table_td_title"  style="color: snow;">储备类型</td>
        <td class="table_td_title"  style="color: snow;">物资类型</td>
        <td class="table_td_title"  style="color: snow;">仓库所在城市</td>
        <td class="table_td_title"  style="color: snow;">数量（件/吨）</td>
        <td class="table_td_title"  style="color: snow; width: 50px;">负责人</td>
        <td class="table_td_title"  style="color: snow;">联系电话</td>
        <td class="table_td_title"  style="color: snow; width: 150px; text-align: center;">状态</td>
      </tr>
      <% @material_reserves.each do |material_reserf| %>
        <tr class="" class="border-bottom" style="border: 1px solid #dcdcdc;background: #ffffff87;">
          <td class="table_text_submission"><%= material_reserf.region %></td>
          <td class="table_text_submission"><%= material_reserf.enterprise.try(:name)%></td>
          <!--
          <td class="table_text_submission"><%= material_reserf.enterprise.try(:enterprise_category)%></td>
          <td class="table_text_submission"><%= material_reserf.longitude %>/ <%= material_reserf.latitude %></td>
          <td class="table_text_submission"><%= material_reserf.max_store %></td>
          -->
          <td class="table_text_submission"><%= material_reserf.warehouse_location %></td>
          <td class="table_text_submission">
            <%= material_reserf.enterprise_category %>
          </td>
          <td class="table_text_submission">
            <%= material_reserf.goods_type %>
          </td>
          <td class="table_text_submission"><%= material_reserf.city %></td>
          <td class="table_text_submission"><%= material_reserf.storage_apacity %></td>
          <td class="table_text_submission"><%= material_reserf.person_in_charge %></td>
          <td class="table_text_submission"><%= link_to material_reserf.tel, material_reserf, style: 'text-decoration: none; color: #000;' %></td>
          <td style="display: flex; margin-top: 10px; justify-content: space-around;">
            <%= link_to "查看", material_reserf, style: 'text-decoration: none;' %>
            <span style="color: #b2b2b2;">|</span>
            <%= link_to '修改', edit_material_reserf_path(material_reserf), style: 'color: #68c0fb; text-decoration: none;' %>
            <span style="color: #b2b2b2;">|</span>
            <%= button_to '删除', material_reserf, method: :delete, form: { data: { turbo_confirm: '确定删除?' } }, class: "btn btn-danger btn-sm", style: 'float: left; margin-top: -3px;' %>
          </td>
        </tr>
      <% end %>
    </table>

    <div style="display: flex; float: right;">

      <% start_index = @material_reserves.offset_value + 1 %>
      <% end_index = start_index + @material_reserves.length - 1 %>

      <p class="page_text">
        <span> 第 <%= start_index %> - <%= end_index %> 条/总共 <%= @material_reserves.total_count %> 条
          <% if @material_reserves.total_pages > 1 %>

            <% first_page = [1, @material_reserves.current_page - 3].max %>
            <% last_page = [first_page + 6, @material_reserves.total_pages].min %>
            <% page_links = (first_page..last_page).map do |page|
              if page == @material_reserves.current_page
                content_tag :span, page, class: 'current'
              else
                link_to page, { page: page }, class: 'page_link'
              end
            end %>
            <%= content_tag :div, page_links.join.html_safe, class: 'paging_links', style: 'display: flex;' %>
            <span class="page_text">
              <%= form_tag '', method: :get do %>
                &nbsp;&nbsp;<span class="page_text">每页 <%= select_tag :per_page, options_for_select([10, 20, 50], params[:per_page]), onchange: "$('#filter_form').submit()" %> 条</span>
                &nbsp;&nbsp;跳至:&nbsp;&nbsp; <%= text_field_tag :page, params[:page], class: 'page_skip', onchange: "$('#filter_form').submit()"%>&nbsp;&nbsp;页
                &nbsp;&nbsp;<%= submit_tag "跳转", class: "page_skip", class: 'btn btn-primary btn-sm', style: 'width: 55px; font-size: 14px; height: 32px; background: #006DF1; opacity: 1' %>
            <% end %>
            </span>
          <% end %>
        </span>
      </p>
    </div>
  </div>

</div>

</div>


