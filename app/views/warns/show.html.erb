<%#= render @warn %>
<div class="list">
  <span class="show_title">
    <span style="margin-right: 5px;">
      <%= image_tag "enterprise.png" %>
    </span>
    <span> 基本信息</span>
  </span>
  <div style="display: flex;">
    <table class='' style="margin-top: 35px;">
      <tr>
        <td>
          <span class="show_table_name">所属地州:&nbsp;</span>
          <span class="show_table_content"><%= @warn.region.name %></span>
        </td>
      </tr>

      <tr>
        <td>
          <span class="show_table_name">仓库编号:&nbsp;</span>
          <span class="show_table_content"><%= @warn.material_reserf_number %></span>
        </td>
      </tr>

      <tr>
        <td>
          <span class="show_table_name">企业分类:&nbsp;</span>
          <span class="show_table_content"><%= @warn.enterprise.try(:enterprise_category) %></span>
        </td>
      </tr>

      <tr>
        <td>
          <span class="show_table_name">物资类型:&nbsp;</span>
          <span class="show_table_content"><%= @warn.goods_category %></span>
        </td>
      </tr>

      <tr>
        <td>
          <span class="show_table_name">单位:&nbsp;</span>
          <span class="show_table_content"><%= @warn.unit %></span>
        </td>
      </tr>

      <tr>
        <td>
          <span class="show_table_name">最高预警量:&nbsp;</span>
          <span class="show_table_content"><%= @warn.max_warn %></span>
        </td>
      </tr>
      <tr>
        <td>
          <span class="show_table_name">最低预警量:&nbsp;</span>
          <span class="show_table_content"><%= @warn.min_warn %></span>
        </td>
      </tr>
      <tr>
        <td>
          <span class="show_table_name">数值结果:&nbsp;</span>
          <span class="show_table_content">
            <% if @warn.warn_result == '充足' %>
              <span style="color: green;">充足<span>
            <% elsif @warn.warn_result == '不足' %>
              <span style="color: orange;">不足<span>
            <% elsif @warn.warn_result == '预警' %>
              <span style="color: red;">预警<span>
            <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div style="margin-top: 50px;">
    <%= link_to "编辑", edit_warn_path(@warn), class: 'btn btn-light btn-sm', style: 'width: 100px; border: 1px solid #0d6efd;' %>
    <%= link_to "返回", warns_path, class: 'btn btn-primary btn-sm', style: 'width: 100px; margin-left: 20px;' %>
    <%#= button_to "删除", @warn, method: :delete, class: 'btn btn-sm btn-danger' %>
  </div>
  <div style="height: 89px;"></div>
</div>
