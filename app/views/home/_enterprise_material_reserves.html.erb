<div style="display: flex;">
  <div>
    <div class="daily_card_div">
      <div class="daily_card_index">
        <p class="every_card">企业数量</p>
        <span class="data_index">268<span class="data_unit" style="margin-left: 6px;">家</span></span>
        <p class="daily_data_time">较昨日
          <span class="data_up">12家
          <%= image_tag 'rate_up.png', style: 'margin-top: -10px;' %>
          </span>
          <span style="margin-left: 47px;">较上周</span>
          <span class="data_down">2家
            <%= image_tag 'rate_down.png', style:"margin-top: -10px;" %>
          </span>
        </p>
      </div>
      <div class="daily_card_index">
        <p class="every_card">人员总数量</p>
        <p class="data_index">2<span class="data_unit" style="margin-left: 6px;">人</span></p>
        <p class="daily_data_time" style="margin-top: -18px;">较昨日
          <span class="data_up">12家
          <%= image_tag 'rate_up.png', style: 'margin-top: -10px;' %>
          </span>
          <span style="margin-left: 47px;">较上周</span>
          <span class="data_down">2家
            <%= image_tag 'rate_down.png', style:"margin-top: -10px;" %>
          </span>
        </p>
      </div>
      <div class="daily_card_index">
        <p class="every_card">车辆总数量</p>
        <p class="data_index">28<span class="data_unit" style="margin-left: 6px;">辆</span></p>
        <p class="daily_data_time" style="margin-top: -18px;">较昨日
          <span class="data_up">12家
          <%= image_tag 'rate_up.png', style: 'margin-top: -10px;' %>
          </span>
          <span style="margin-left: 47px;">较上周</span>
          <span class="data_down">2家
            <%= image_tag 'rate_down.png', style:"margin-top: -10px;" %>
          </span>
        </p>
      </div>
    </div>
    <div class="daily_table">
      <p class="links_status" style="margin: 20px 0;">
        &nbsp;&nbsp;<%= link_to '数据报送', daily_goods_statistics_path %>
        <%= link_to '仓储信息', material_reserves_path, class: 'active-link', style: 'margin-left: 26px;'  %>
        <%= link_to '车辆信息', cars_path, style: 'margin-left: 26px;'  %>
        <%= link_to '人员信息', enterprise_personnels_path, style: 'margin-left: 26px;' %>
      </p>
      <div style="margin: 20px 0;">
        <%= form_tag '', method: :get do %>
          <!--
          &nbsp;&nbsp;日期:&nbsp;&nbsp; <%= text_field_tag :created_at, params[:created_at], id: 'datepicker', placeholder: '20230402', class: 'select_region' %>
          -->
          &nbsp;&nbsp;地州:&nbsp;&nbsp; <%= select_tag :region, options_for_select(@regions, params[:region]), class: 'select_region' %>&nbsp;&nbsp;
          &nbsp;&nbsp;企业:&nbsp;&nbsp; <%= text_field_tag :name, params[:name], placeholder: '新疆广宏食品集团有限公司', class: 'select_region' %>
          &nbsp;&nbsp;<%= submit_tag "查询", class: "form_submit", class: 'btn btn-primary btn-sm fa-input', style: 'width: 80px;' %>
        <% end %>
        <%= link_to "新增仓库", new_material_reserf_path, class: 'btn btn-primary btn-sm', style: 'text-decoration: none; margin-top: 15px; margin-bottom: 10px;' %>
      </div>
      <table class='table' style='border-left: 1px solid #dcdcdc;
              border: 1px solid #dcdcdc;
              border-right: 1px solid #dcdcdc;
              background: snow;'>
        <tr class="table_title" class="">
          <!--
          <td class="table_td_title" style="color: snow;">
            <span class="table_td_title" style="color: snow;">序号</span>
          </td>
          -->
          <td class="table_td_title"  style="font-size: 12px;margin-top: 16px; display: ;color: snow;">所属地州</td>
          <td class="table_td_title"  style="font-size: 12px;margin-top: 16px; display: ;color: snow;">企业名称</td>
          <td class="table_td_title"  style="font-size: 12px;color: snow;">企业分类</td>
          <td class="table_td_title"  style="font-size: 12px;color: snow;">物资分类</td>
          <td class="table_td_title"  style="font-size: 12px;color: snow;">存储能力</td>
          <td class="table_td_title"  style="font-size: 12px;color: snow;">仓库地点</td>
          <td class="table_td_title"  style="font-size: 12px;color: snow;">仓库所在城市</td>
          <td class="table_td_title"  style="font-size: 12px;color: snow;">最大储备容量</td>
          <td class="table_td_title"  style="font-size: 12px;color: snow;">仓库经纬度</td>
          <td class="table_td_title"  style="font-size: 12px;color: snow;">负责人</td>
          <td class="table_td_title"  style="font-size: 12px;color: snow;">手机号</td>
          <td class="table_td_title"  style="font-size: 12px;color: snow; text-align: center;">操作</td>
        </tr>
        <% @material_reserves.each do |material_reserf| %>
          <tr class="" class="border-bottom" style="border: 1px solid #dcdcdc;background: #ffffff87;">
            <!--
            <td class="table_text_submission"><%= material_reserf.id %></td>
            -->
            <td class="table_text_submission" style="font-size: 12px;"><%= material_reserf.region %></td>
            <td class="table_text_submission" style="font-size: 12px;"><%= material_reserf.enterprise.try(:name)%></td>
            <td class="table_text_submission" style="font-size: 12px;"><%= material_reserf.enterprise.try(:enterprise_category)%></td>
            <td class="table_text_submission" style="font-size: 12px;">
              <%= material_reserf.goods_type %>
            </td>
            <td class="table_text_submission" style="font-size: 12px;"><%= material_reserf.storage_apacity %></td>
            <td class="table_text_submission" style="font-size: 12px;"><%= material_reserf.warehouse_location %></td>
            <td class="table_text_submission" style="font-size: 12px;"><%= material_reserf.city %></td>
            <td class="table_text_submission" style="font-size: 12px;"><%= material_reserf.max_store %></td>
            <td class="table_text_submission" style="font-size: 12px;"><%= material_reserf.longitude %>/ <%= material_reserf.latitude %></td>
            <td class="table_text_submission" style="font-size: 12px;"><%= material_reserf.person_in_charge %></td>
            <td class="table_text_submission" style="font-size: 12px;"><%= link_to material_reserf.tel, material_reserf, style: 'text-decoration: none; color: #000;' %></td>
            <td style="width: 108px;display: flex;">
              <%= link_to "详情", material_reserf, style: 'text-decoration: none;margin-left: 5px;' %>
              <%= link_to '修改', edit_material_reserf_path(material_reserf), style: 'margin-left: 5px;text-decoration: none;color: #68c0fb;' %>
              <%#= button_to '删除', material_reserf, method: :delete, form: { data: { turbo_confirm: '确定删除?' } }, class: "btn btn-danger btn-sm", style: 'font-size: 12px; width: 30px;background: transparent; border: transparent;color:red; margin-left: -3px; float: left;' %>
              <%= button_to '删除', material_reserf, method: :delete, form: { data: { turbo_confirm: '确定删除?' } }, class: "btn btn-danger btn-sm", style: 'font-size: 12px; margin-left: 5px;' %>
            </td>
          </tr>
        <% end %>
      </table>

      <div style="height: 30px;"></div>
      <div style="display: flex; float: right;">

        <% start_index = @material_reserves.offset_value + 1 %>
        <% end_index = start_index + @material_reserves.length - 1 %>

        <p class="page_text">
          <span> 第 <%= start_index %> - <%= end_index %> 条/总共 <%= @material_reserves.total_count %> 条

            <% if @material_reserves.total_pages > 1 %>

              <% first_page = [1, @material_reserves.current_page - 3].max %>
              <% last_page = [first_page + 6, @material_reserves.total_pages].min %>
              <% page_links = (first_page..last_page).map do |page|
                if page == @material_reserves.current_page
                  content_tag :span, page, class: 'current'
                else
                  link_to page, { page: page }, class: 'page_link'
                end
              end %>
              <%= content_tag :div, page_links.join.html_safe, class: 'paging_links', style: 'display: flex;' %>
              <span class="page_text">
                <%= form_tag '', method: :get do %>
                  &nbsp;&nbsp;<span class="page_text">每页 <%= select_tag :per_page, options_for_select([10, 20, 50], params[:per_page]), onchange: "$('#filter_form').submit()" %> 条</span>
                  &nbsp;&nbsp;跳至:&nbsp;&nbsp; <%= text_field_tag :page, params[:page], class: 'page_skip', onchange: "$('#filter_form').submit()"%>&nbsp;&nbsp;页
                  &nbsp;&nbsp;<%= submit_tag "跳转", class: "page_skip", class: 'btn btn-primary btn-sm', style: 'width: 55px; font-size: 14px; height: 32px; background: #006DF1; opacity: 1' %>
                <% end %>
              </span>
            <% end %>
          </span>
        </p>
      </div>
    </div>

  </div>

  <%= render 'home/list_bottom' %>
</div>


