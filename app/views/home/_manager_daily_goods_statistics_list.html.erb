<div style="display: flex; width: 1200px;">
  <div class="daily_table">
    <p style="margin: 20px;">
      <svg xmlns="http://www.w3.org/2000/svg" color="#0066ff" width="16" height="16" fill="currentColor" class="bi bi-caret-right-fill" viewBox="0 0 16 16">
        <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
      </svg>
      <span style="margin-left: 10px;font-weight: 600; font-size: 18px;">物资统计表<span>
    </p>
    <%= form_tag '', method: :get do %>
      <p class="form_row">
        <span class="query_submissions" >地州: <%= select_tag :region, options_for_select(@regions, params[:region]), class: 'select_region', style: 'width: 200px;' %></span>
        <span class="query_submissions" >&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;物资: <%= select_tag :goods_name, options_for_select(CATEGORY_ARRAY, params[:goods_name]), class: 'select_region', style: 'width: 200px;' %></span>
        <span class="query_submissions" style="margin-left: 6px;">&nbsp;&nbsp;&nbsp;&nbsp;日期:&nbsp;&nbsp;&nbsp;&nbsp; <%= text_field_tag :daily_goods_date, params[:daily_goods_date], id: 'datepicker', placeholder: '例如 20230402', class: 'select_region', style: 'width: 200px;' %></span>
        &nbsp;&nbsp;&nbsp;&nbsp;<%= submit_tag "查询", class: "form_submit", class: 'btn btn-primary', style: 'width: 65px; font-size: 14px; height: 32px; line-height: 14px; background: #006DF1; opacity: 1' %>
      </p>
    <% end %>
    <br/>
    &nbsp;&nbsp;<%= link_to '下载excel', download_csv_daily_goods_statistics_path, class: 'btn btn-light btn-sm', style: 'border: 1px solid aliceblue#307dff; border: 1px solid #307dff; background: transparent; width: 110px;float: right; margin-right: 90px;' %>&nbsp;&nbsp;&nbsp;&nbsp;
    <p class="links_status" style="margin: 30px 0;">
      &nbsp;&nbsp;&nbsp;&nbsp;<%= link_to '物资日统计表', daily_goods_statistics_path, class: 'active-link', style: 'margin-left: 30px;' %>
      <%= link_to '物资储备名录', material_reserves_path, style: 'margin-left: 26px;'  %>
      <%= link_to '物资数据报送', goods_data_submissions_path, style: 'margin-left: 26px;' %>
    </p>

    <table id="" class="table table-bordered" style="">
      <thead>
        <tr>
          <th rowspan="2" style="width: 130px;">所属地州</th>
          <th rowspan="2" style="width: 65px;">进销存</th>
          <th colspan="10">产品类别</th>
          <th rowspan="2" style="width: 100px">日期</th>
        </tr>
        <tr>
          <th class=""  style="color: snow;">大米（吨）</th>
          <th class=""  style="color: snow;">面粉（吨）</th>
          <th class=""  style="color: snow;">食用油（吨）</th>
          <th class=""  style="color: snow;">蔬菜（吨）</th>
          <th class=""  style="color: snow;">猪肉（吨）</th>
          <th class=""  style="color: snow;">羊肉（吨）</th>
          <th class=""  style="color: snow;">鸡肉（吨）</th>
          <th class=""  style="color: snow;">鸡蛋（吨）</th>
          <th class=""  style="color: snow;">鲜奶（吨）</th>
          <th class=""  style="color: snow;">方便面（袋）</th>
        </tr>
      </thead>
      <tbody id="">
        <% @daily_goods_statistics.each do |daily_goods_statistic| %>
          <tr class="" class="border-bottom" style="border: 1px solid #dcdcdc;background: #ffffff87;">
            <td rowspan="3" class="table_text_submission"><%= link_to daily_goods_statistic.region, daily_goods_statistic, style: 'text-decoration: none;' %></td>
            <td class="table_text_submission">
              进货量
            </td>

            <td class="table_text_submission"><%= daily_goods_statistic.rice_purchase %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.flour_purchase %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.oil_purchase %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.vegetables_purchase %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.pork %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.lamb %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.poultry %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.egg %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.milk %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.convenient_food %></td>
            <td rowspan="3" class="table_text_submission"><%= daily_goods_statistic.daily_goods_date.strftime('%Y-%m-%d')%></td>
          </tr>
          <tr>
            <td class="table_text_submission">
              销售量
            </td>
            <td class="table_text_submission"><%= daily_goods_statistic.rice_sales %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.flour_sales %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.oil_sales %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.vegetables_sales %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.pork %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.lamb %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.poultry %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.egg %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.milk %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.convenient_food %></td>
          </tr>
          <tr>
            <td class="table_text_submission">
              库存量
            </td>
            <td class="table_text_submission"><%= daily_goods_statistic.rice %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.flour %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.oil %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.vegetables %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.pork %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.lamb %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.poultry %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.egg %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.milk %></td>
            <td class="table_text_submission"><%= daily_goods_statistic.convenient_food %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div style="height: 30px;"></div>

    <div style="display: flex; float: right;">

      <% start_index = @daily_goods_statistics.offset_value + 1 %>
      <% end_index = start_index + @daily_goods_statistics.length - 1 %>

      <p class="page_text">
        <span> 第 <%= start_index %> - <%= end_index %> 条/总共 <%= @daily_goods_statistics.total_count %> 条
          <% if @daily_goods_statistics.total_pages > 1 %>

            <% first_page = [1, @daily_goods_statistics.current_page - 3].max %>
            <% last_page = [first_page + 6, @daily_goods_statistics.total_pages].min %>
            <% page_links = (first_page..last_page).map do |page|
              if page == @daily_goods_statistics.current_page
                content_tag :span, page, class: 'current'
              else
                link_to page, { page: page }, class: 'page_link'
              end
            end %>
            <%= content_tag :div, page_links.join.html_safe, class: 'paging_links', style: 'display: flex;' %>
            <span class="page_text">
              <%= form_tag '', method: :get do %>
                &nbsp;&nbsp;<span class="page_text">每页 <%= select_tag :per_page, options_for_select([10, 20, 50], params[:per_page]), onchange: "$('#filter_form').submit()" %> 条</span>
                &nbsp;&nbsp;跳至:&nbsp;&nbsp; <%= text_field_tag :page, params[:page], class: 'page_skip', onchange: "$('#filter_form').submit()"%>&nbsp;&nbsp;页
                &nbsp;&nbsp;<%= submit_tag "跳转", class: "page_skip", class: 'btn btn-primary btn-sm', style: 'width: 55px; font-size: 14px; height: 32px; background: #006DF1; opacity: 1' %>
            <% end %>
            </span>
          <% end %>
        </span>
      </p>
    </div>
    <div style="height: 200px;"></div>
  </div>
</div>


